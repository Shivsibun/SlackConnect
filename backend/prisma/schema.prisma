generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  id           String   @id @default(cuid())
  teamId       String   @unique
  accessToken  String
  refreshToken String?  // nullable
  tokenExpiry  DateTime? // nullable
}

model ScheduledMessage {
  id      String   @id @default(cuid())
  teamId  String
  channel String
  text    String
  sendAt  DateTime
  sent    Boolean  @default(false)
}

